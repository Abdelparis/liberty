<!-- app/views/messages/_message.html.erb -->
  <% @chatroom.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <div class="d-flex justify-content-center">
          <div class="card-message">
            <% if message.user.avatar.attached? %>
                <%= cl_image_tag message.user.avatar.key, class:"avatar-nav", style:"margin-top: 15px"%>
              <% else %>
                <img src="https://d2mp1cia79qmhd.cloudfront.net/prod/assets/default-avatar-58953c9e3461a05e47397bef0ad1e1967f9be436996e40fc7a84147336fd23e6.png">
            <% end %>
            <i class="author">
              <span><%= message.user.first_name %></span>
              <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
            </i>
            <p style="margin-top:-20px; margin-left:60px"><%= message.content %></p>
        </div>
      </div>
    </div>
  <% end %>
