<div class="row">
  <div class="col-3">
    <div class="border-right">
      <h4 class="border-bottom pt-4 pb-4" > Messages </h4>
      <% @chatrooms.each do |chatroom| %>
        <div class="card-message">
          <% if chatroom.booking.user.avatar.attached? %>
              <%= cl_image_tag chatroom.booking.user.avatar.key, class:"avatar-nav", style:"margin-top: 15px"%>
            <% else %>
              <img src="https://d2mp1cia79qmhd.cloudfront.net/prod/assets/default-avatar-58953c9e3461a05e47397bef0ad1e1967f9be436996e40fc7a84147336fd23e6.png">
          <% end %>
          <%= link_to imbox_path(chatroom_id: chatroom.id) do %>
            <%= "#{chatroom.booking.user.first_name} #{chatroom.booking.user.last_name}"%>
          <% end %>
          <p class="small-text"><%= chatroom.messages.last.content %> <%= chatroom.messages.last.created_at %></p>
        </div>
      <% end %>
      <div style = "height:100em"></div>
    </div>
  </div>
  <div class="col-9">
    <% if params[:chatroom_id].present? %>
    <h4 class="border-bottom pt-4 pb-4" > Messages </h4>
    <div class="small-container">
      <div id="messages" data-chatroom-id="4">

      <% @chatroom.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.first_name %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
    </div>
     <h1>#<%= @chatroom.name %></h1>
      <%= simple_form_for [@chatroom, @message ], remote: true do |f| %>
        <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}" %>
      <% end %>
    </div>
  </div>
  <% end %>
 </div>
