</div>
<div class="t_container">
  <div class="row">
    <div class="col-8">
    <h1 class="title">All missions</h1>
    <div class="card_container">
      <% @missions.each do |mission| %>
        <div class="card-product">
           <h2><%= mission.name %></h2>
          <div class="card-information" >
            <div class="card-description">

              <% if mission.photos.attached? %>
                <%= cl_image_tag mission.photo.key %>
              <% else %>
                <%= image_tag("mission.jpg") %>
              <% end %>
                <div class ="card-validation">
                <a href="#" class="btn btn-ok">En savoir plus</a>
                </div>
            </div>
            <div class="card-user">
              <div class="card-user-infos">
                <h3><%= mission.job_category.name %></h3>
                <div class="card-user_description">
                  <h4> Mission :</h4>
                  <p><%= mission.description %></p>
                  <div class="card-user-price">
                  <p id="date">10 days From 12/09/2019 to 20/09/2019</p>
                  <p id="price"> Price: 20 â‚¬</p>
                  </div>

                </div>
              </div>
            </div>
          </div>
