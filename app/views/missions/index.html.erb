<div class="container_search_index">
  <div class="search_index_container">
    <%= render 'shared/search' %>
  </div>
</div>
<div class="container_card">
  <h1 class="title">Missions trouvées</h1>
  <p><%= @missions.ids.length %> mission(s) de <%= @params[:name].capitalize %> à <%= @params[:address].capitalize %></p>
  <div class="row">
    <div class="col-7">
      <div class="card_container">
        <% @missions.each do |mission| %>
        <%= link_to mission_path(mission) do %>
          <div class="card-product">
          <h2> Recherche : <%=mission.job_category.name.downcase %></h2>
            <div class="card-information" >
              <div class="card-description">
                <% if mission.photos.attached? %>
                  <%= cl_image_tag mission.photos.first.key %>
                <% else %>
                  <%= image_tag("mission.jpg") %>
                <% end %>
              </div>
              <div class="card-user">
                <div class="card-user-infos">
                  <div class="card-user_description">
                  <h4> Mission :</h4>
                  <p class="text_mission"><%= mission.description.truncate(220) %></p>
                    <div class="card-user-price">
                    <p id="date"> Du <%= mission.start_date_time.strftime("%d/%m/%Y/") %> au <%= mission.end_date_time.strftime("%d/%m/%Y") %> de <%= mission.start_date_time.strftime("%k:%Mh") %> à <%= mission.end_date_time.strftime("%k:%Mh") %></p>
                    <p id="price"><%= mission.price_by_hour%> €</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-5">
      <div id="map" style="width: 100%; height: 100vh;"data-markers="<%= @markers.to_json %>"data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
   </div>
  </div>
</div>
